@page
@model InventoryManagement.Pages.Personel.IndexModel

@{
    ViewData["Title"] = "Index";
}
@{
    Models.Proccess proc = new Models.Proccess();
}
<script src="https://kit.fontawesome.com/2af456f012.js" crossorigin="anonymous"></script>
<div class="body">

    <div class="index">

        <div class="card-header">
            <h1 class="card-title">Personel</h1>
            <div class="card-tools">
                <a href="Delivered" class="text-white">Delivered</a>
                <a asp-page="Create" class="text-white">Create New</a>
            </div>
        <div class="card-body table-responsive p-0" style="height: 300px;">
            <div class="card-body">
                    <table class="table table-head-fixed text-nowrap text-white">
                        <thead style="position:sticky; top:0px; background-color: rgb(32, 43, 48);">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Personel_Details[0].Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Personel_Details[0].Age)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Personel_Details[0].Contact)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Personel_Details[0].Email)
                            </th>
                            <th>
                                Modify
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Personel_Details)
                        {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name);
                                    @{
                                        string name = item.Name.ToString();
                                        proc.ProccessList.Add(name);
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Age)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Contact)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    <a asp-page="./Edit" asp-route-id="@item.ID"><i class="fa-solid fa-pen-to-square" alt="MARJO"></i></a> |
                                    <a asp-page="./Details" asp-route-id="@item.ID"><i class="fa-solid fa-circle-info"></i></a> |
                                    <a asp-page="./Delete" asp-route-id="@item.ID"><i class="fa-solid fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
        </div>
        </div>
    </div>
</div>