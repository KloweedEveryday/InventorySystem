@page
@model InventoryManagement.Pages.Personel.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="index">

    <h1>Personel</h1>
    <p>
        <a href="Delivered">Delivered</a>
    </p>
    <p>
        <a asp-page="Create">Create New</a>
    </p>
    <table class="table table-responsive text-white">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Personel_Details[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Personel_Details[0].Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Personel_Details[0].Contact)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Personel_Details[0].Email)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Personel_Details)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contact)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>