@page
@model InventoryManagement.Pages.Personel.CreateModel

@{
    ViewData["Title"] = "Create";
}
<div class="index" style="position:absolute; top: 5px;width: 40%;left:15%; top:-20px">
    <div class="card bg-transparent">
        <div class="card-header">
            <h1>Create</h1>
            <h4>Personel Details
            <a href="Index">
                <input type="button" class="btn btn-primary float-end m-3" value="Back to List"></input>
            </a>
            </h4>
            <hr />
        </div>
        <div class="card-body table-responsive p-0 p-4" style="height: 300px;overflow-x: hidden;">
        <div class="row">
            <div class="col-10 m-2">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Personel_Details.Name" class="control-label"></label>
                        <input asp-for="Personel_Details.Name" class="form-control" />
                        <span asp-validation-for="Personel_Details.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Personel_Details.Age" class="control-label"></label>
                        <input asp-for="Personel_Details.Age" class="form-control" />
                        <span asp-validation-for="Personel_Details.Age" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Personel_Details.Contact" class="control-label"></label>
                        <input asp-for="Personel_Details.Contact" class="form-control" />
                        <span asp-validation-for="Personel_Details.Contact" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Personel_Details.Email" class="control-label"></label>
                        <input asp-for="Personel_Details.Email" class="form-control" />
                        <span asp-validation-for="Personel_Details.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <br>
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        </div>
        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }
</div>
</div>
